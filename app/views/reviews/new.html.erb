<div class="container">
  <h1> New Review </h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5], class: "mb-3" %>
    <%= f.input :content, class: "form-control mb-3" %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>

  <div class="mt-4">
  <%= link_to "Cancel review", restaurant_path(@restaurant), class: "btn btn-primary" %>
  </div>
</div>
